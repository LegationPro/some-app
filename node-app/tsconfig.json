{
  "compilerOptions": {
      "module": "commonjs",
      "esModuleInterop": true,
      "allowSyntheticDefaultImports": true,
      "target": "es6",
      "noImplicitAny": true,
      "moduleResolution": "node",
      "sourceMap": true,
      "outDir": "dist",
      "baseUrl": "./src",
      "paths": {
        "@services/*": ["services/*"],
        "@controllers/*": ["controllers/*"],
        "@routes/*": ["routes/*"],
        "@utils/*": ["utils/*"],
      }
  },
  "include": [
      "src/**/*"
  ]
}